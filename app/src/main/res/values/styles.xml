<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>\
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowBackground">@drawable/splash_screen_drawable</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="bottomNavStyle" parent="Widget.MaterialComponents.BottomNavigationView">
    </style>
    <style name="homeButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textSize">12sp</item>
        <item name="backgroundTint">?colorSurface</item>
        <item name="iconTint">?colorPrimary</item>
    </style>

    <style name="inverseHomeButtonStyle" parent="homeButtonStyle">
        <item name="android:textColor">?colorSurface</item>
        <item name="backgroundTint">?colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/colorSecondaryVariant</item>
        <item name="iconTint">?colorSurface</item>
    </style>

    <style name="exchangeButtonStyle" parent="homeButtonStyle">
        <item name="android:textColor">?colorSurface</item>
        <item name="backgroundTint">?colorSecondary</item>
        <item name="cornerRadius">5dp</item>
        <item name="iconTint">?colorSurface</item>
    </style>

    <style name="bottomNavTextAppearance">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
