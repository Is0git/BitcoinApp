<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="@android:integer/config_longAnimTime"
        motion:motionInterpolator="easeInOut">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0"
                android:translationX="-100dp"
                motion:framePosition="50"
                motion:motionTarget="@+id/refreshButton" />
            <KeyAttribute
                android:alpha="0"
                android:translationY="30dp"
                motion:framePosition="50"
                motion:motionTarget="@id/calculatorButton" />
            <KeyAttribute
                android:alpha="0"
                android:translationX="-100dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/refreshButton" />
            <KeyAttribute
                android:alpha="0"
                android:translationY="10dp"
                motion:framePosition="100"
                motion:motionTarget="@id/calculatorButton" />
            <KeyAttribute
                android:alpha="1"
                android:translationY="45dp"
                motion:framePosition="40"
                motion:motionTarget="@+id/timeUpdated" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="60"
                motion:motionTarget="@+id/timeUpdated" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@+id/timeUpdated" />

            <KeyAttribute
                android:alpha="1"
                android:translationY="45dp"
                motion:framePosition="40"
                motion:motionTarget="@id/lastUpdatedRaw" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="60"
                motion:motionTarget="@id/lastUpdatedRaw" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@id/lastUpdatedRaw" />
            <KeyAttribute
                android:alpha="1"
                android:translationY="-50dp"
                motion:framePosition="50"
                motion:motionTarget="@+id/homeText" />
            <KeyAttribute
                android:alpha="0"
                android:scaleX="1.0"
                android:scaleY="1.0"
                android:translationY="-50dp"
                motion:framePosition="71"
                motion:motionTarget="@+id/homeText" />
            <KeyAttribute
                android:alpha="1"
                android:scaleX="2"
                android:scaleY="2"
                android:translationX="23dp"
                android:translationY="0dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/homeText" />
            <KeyAttribute
                android:alpha="0"
                android:translationX="-75dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/backText" />
            <KeyAttribute
                android:alpha="0"
                android:translationX="-75dp"
                motion:framePosition="70"
                motion:motionTarget="@+id/backText" />
            <KeyAttribute
                android:alpha="0"
                android:translationX="-50dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/currencyTextField" />
            <KeyAttribute
                android:alpha="0"
                android:scaleX="0.3"
                android:scaleY="0.3"
                android:translationX="-50dp"
                motion:framePosition="70"
                motion:motionTarget="@+id/currencyTextField" />

            <KeyAttribute
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"
                android:translationX="0dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/currencyTextField" />

            <KeyAttribute
                android:alpha="0"
                android:translationX="-50dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/bitcoinTextField" />

            <KeyAttribute
                android:alpha="0"
                android:scaleX="0.3"
                android:scaleY="0.3"
                android:translationX="-50dp"
                motion:framePosition="70"
                motion:motionTarget="@+id/bitcoinTextField" />

            <KeyAttribute
                android:alpha="1"
                android:scaleX="1"
                android:scaleY="1"
                android:translationX="0dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/bitcoinTextField" />
            <KeyAttribute
                android:alpha="0"
                android:translationX="-50dp"
                motion:framePosition="0"
                motion:motionTarget="@+id/swapIcon" />

            <KeyAttribute
                android:alpha="0"
                android:translationX="-50dp"
                motion:framePosition="90"
                motion:motionTarget="@+id/swapIcon" />

            <KeyAttribute
                android:alpha="1"
                android:translationX="0dp"
                motion:framePosition="100"
                motion:motionTarget="@+id/swapIcon" />

            <KeyAttribute
                android:alpha="0"
                android:translationX="-50dp"
                motion:framePosition="0"
                motion:motionTarget="@id/calculatorText" />

            <KeyAttribute
                android:alpha="0"
                android:translationX="-50dp"
                motion:framePosition="90"
                motion:motionTarget="@id/calculatorText" />

            <KeyAttribute
                android:alpha="1"
                android:translationX="0dp"
                motion:framePosition="100"
                motion:motionTarget="@id/calculatorText" />

            <KeyAttribute
                android:alpha="0"
                android:translationY="50dp"
                motion:framePosition="0"
                motion:motionTarget="@id/exchangeButton" />

            <KeyAttribute
                android:alpha="0"
                android:translationY="50dp"
                motion:framePosition="90"
                motion:motionTarget="@id/exchangeButton" />

            <KeyAttribute
                android:alpha="1"
                android:translationY="0dp"
                motion:framePosition="100"
                motion:motionTarget="@id/exchangeButton" />

            <KeyAttribute
                motion:framePosition="0"
                motion:motionTarget="@id/infoButton" />

            <KeyAttribute
                android:scaleX="1.3"
                android:scaleY="1.3"
                motion:framePosition="100"
                motion:motionTarget="@id/infoButton" />

            <KeyAttribute
                android:translationY="-20dp"
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@id/chartName" />

            <KeyAttribute
                android:alpha="0"
                motion:framePosition="100"
                motion:motionTarget="@id/chartName" />

            <KeyCycle
                android:rotationY="85"
                motion:wavePeriod="0.5"
                motion:framePosition="100"
                motion:motionTarget="@id/infoButton" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/calculatorBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/swapIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            motion:layout_constraintEnd_toEndOf="@+id/bitcoinTextField"
            motion:layout_constraintStart_toStartOf="@+id/bitcoinTextField"
            motion:layout_constraintTop_toBottomOf="@+id/bitcoinTextField" />

        <Constraint android:id="@id/homeText">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/colorSecondaryVariant" />
        </Constraint>

        <Constraint android:id="@id/infoButton">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/calculatorBackground"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint android:id="@id/homeText">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/colorSecondary" />
        </Constraint>

        <Constraint android:id="@id/infoButton">
            <CustomAttribute
                motion:attributeName="ColorFilter"
                motion:customColorValue="@color/colorSecondary" />
        </Constraint>

        <Constraint android:id="@id/infoButton">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>

    </ConstraintSet>
</MotionScene>